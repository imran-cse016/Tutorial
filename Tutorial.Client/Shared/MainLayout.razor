@inherits LayoutComponentBase


<div class="sidebar">
    <NavMenu />
</div>

<div class="main">

    <ul class="ul">
        <li class="li"><a href="http://blazor.net" target="_blank">Blazor</a></li>
        <li class="li"><a href="http://blazor.net" target="_blank">ASP.NET Core</a></li>
        <li style="float:right"><a class="active" href="#about">About</a></li>
    </ul>


    <div class="content px-4">
        @Body
    </div>
</div>


<style>

    /*Menu Item Start*/
    .ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #3A0647;
    }

    .li {
        float: left;
    }

    li a {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
    }

        li a:hover:not(.active) {
            background-color: #111;
        }

    .active {
        background-color: #4CAF50;
    }
    /*Menu Item End*/

    /*Previous Next Start*/

    a {
        text-decoration: none;
        display: inline-block;
        padding: 8px 16px;
    }

        a:hover {
            background-color: #ddd;
            color: black;
        }

    .previous {
        background-color: #f1f1f1;
        color: black;
    }

    .next {
        background-color: #3A0647;
        color: white;
        float: right;
    }


    /*Previous Next End*/


    


</style>



